    <div class="email-message">
        <form action="/" class="form">
            <h2>Отправить мне сообщение на почту:</h2>
            <div class="form-row">
                <div class="form-group">
                    <label for="text">Имя</label><br>
                    <input type="text" name="text" id="text" placeholder="Ваше имя">
                </div>
                <div class="form-group">
                    <label for="email">email</label><br>
                    <input type="email" id="email" placeholder="Ваш email">
                </div>
            </div>
            <div class="form-group">
                <label for="message">Сообщение</label><br>
                <textarea name="message" id="message" cols="20" rows="5" placeholder="Ваше сообщение"></textarea>
            </div> 
            <button class="btn">Отправить</button>
        </form>
    </div>